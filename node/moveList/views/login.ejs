
<!DOCTYPE html>
<html lang="en">
<head>
    <title>登录</title>
    <%- include common%>
    <%- include("header",{title:'login'})%>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <form>
                    <div class="form-group">
                      <label for="username">账号</label>
                      <input type="text" class="form-control" id="username" placeholder="请输入账号">
                    </div>
                    <div class="form-group">
                      <label for="password">密码</label>
                      <input type="password" class="form-control" id="password" placeholder="请输入密码">
                    </div>          
                    <button type="button" class="btn btn-success" id="btnlogin">登录</button>
                    <button type="button" class="btn btn-info" onclick="location.href='/register'">注册</button>
                  </form>
                  
            </div>
        </div>
    </div>
</body>
<script>
  $('#btnlogin').click(function(){
    $.ajax({
      url:"/users/login",
      type:"POST",
      data:{
        username:$("#username").val(),
        password:$("#password").val()
      },
      headers:{
        token:"ce shi"
      },
      success(res){
        console.log(res)
        if(res.type==1){
          alert("登录成功")
          sessionStorage.token = res.token;
          location.href = "/";

        }else{
          alert("登录失败")
        }
      }
    })
  })
</script>  
</html>